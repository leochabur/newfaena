{% extends "FOSUserBundle::layout.html.twig" %}
{% block fos_user_content %}
<br>
<hr>
<span class="h5 card-title">Nuevo Pais Origen</span>
<hr>
{% for message in app.flashes('sussecc') %}
	<div class="alert alert-success" role="alert">
	  {{ message }}
	</div>
{% endfor %}

<div class="">
	{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="form-row">
      <div class="col-4">
        {{ form_label(form.codigo) }}
        {{ form_widget(form.codigo) }}
      </div>
      <div class="col-4">
        {{ form_label(form.pais, 'Pais Destino') }}
        {{ form_widget(form.pais) }}
      </div>
    </div>
    <div class="form-row">
      <div class="col">
        {{ form_widget(form.guardar) }}
      </div>
    </div>
	{{ form_end(form) }}
    <br>
    <span class="h5">Paises Origen Existentes</span>
    <hr>
    <table class="table table-striped table-bordered table-hover table-sm ">
        <thead>
          <tr>
            <th>#</th>
            <th>Codigo</th>
            <th>Pais</th>
          </tr>
        </thead>
        <tbody>
          {% for p in paises %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ p.codigo }}</td>
                <td>{{ p.pais }}</td>
            </tr>
          {% endfor %}
        </tbody>
    </table>
</div>
{% endblock fos_user_content %}
