{% extends "FOSUserBundle::layout.html.twig" %}
{% block fos_user_content %}
<br>
<hr>
<span class="h5 card-title">Nuevo Camion</span>
<hr>
{% for message in app.flashes('sussecc') %}
	<div class="alert alert-success" role="alert">
	  {{ message }}
	</div>
{% endfor %}

<div class="">
	{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="form-row">
      <div class="col-3">
        {{ form_label(form.tipo) }}
        {{ form_widget(form.tipo) }}
      </div>
      <div class="col-3">
        {{ form_label(form.patente) }}
        {{ form_widget(form.patente) }}
      </div>
      <div class="col-3">
        {{ form_label(form.senasa, 'SENASA') }}
        {{ form_widget(form.senasa) }}
      </div>
      <div class="col-3">
        {{ form_label(form.cantPrecintos, 'Precintos') }}
        {{ form_widget(form.cantPrecintos) }}
      </div>
    </div>
    <div class="form-row">
      <div class="col">
        {{ form_widget(form.guardar) }}
      </div>
    </div>
	{{ form_end(form) }}
    <br>
    <span class="h5">Camiones Existentes</span>
    <hr>
    <table class="table table-striped table-bordered table-hover table-sm ">
        <thead>
          <tr>
            <th>#</th>
            <th>Patente</th>
            <th>SENASA</th>
            <th>Precintos</th>
          </tr>
        </thead>
        <tbody>
          {% for p in camiones %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ p.patente }}</td>
                <td>{{ p.senasa }}</td>
                <td>{{ p.cantPrecintos }}</td>
                <td class="text-center"><a href="{{ path('sigcer_editar_camion', {cmo : p.id}) }}" class="btn btn-sm btn-success">Modificar</a></td>
            </tr>
          {% endfor %}
        </tbody>
    </table>
</div>
{% endblock fos_user_content %}
