{% extends "FOSUserBundle::layout.html.twig" %}
{% block fos_user_content %}
<br>
<hr>
<span class="h5 card-title">Nuevo Cliente</span>
<hr>
{% for message in app.flashes('sussecc') %}
	<div class="alert alert-success" role="alert">
	  {{ message }}
	</div>
{% endfor %}

<div class="">
	{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="form-row">
      <div class="col-4">
        {{ form_label(form.razonSocial) }}
        {{ form_widget(form.razonSocial) }}
      </div>
    </div>
    <div class="form-row">
      <div class="col-4">
        {{ form_label(form.direccion) }}
        {{ form_widget(form.direccion) }}
      </div>
      <div class="col-4">
        {{ form_label(form.codigoPostal) }}
        {{ form_widget(form.codigoPostal) }}
      </div>
      <div class="col-4">
        {{ form_label(form.telefono) }}
        {{ form_widget(form.telefono) }}
      </div>
    </div>
    <div class="form-row">
      <div class="col">
        {{ form_widget(form.guardar) }}
      </div>
    </div>
	{{ form_end(form) }}
    <br>
    <span class="h5">Clientes Existentes</span>
    <hr>
    <table class="table table-striped table-bordered table-hover table-sm ">
        <thead>
          <tr>
            <th>#</th>
            <th>Razon Social</th>
            <th>Direccion</th>
            <th>Cod. Postal</th>
            <th>Telefono</th>
          </tr>
        </thead>
        <tbody>
          {% for p in clientes %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ p.razonSocial }}</td>
                <td>{{ p.direccion }}</td>
                <td>{{ p.codigoPostal }}</td>
                <td>{{ p.telefono }}</td>
            </tr>
          {% endfor %}
        </tbody>
    </table>
</div>
{% endblock fos_user_content %}
