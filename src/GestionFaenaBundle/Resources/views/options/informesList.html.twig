{% extends "FOSUserBundle::layout.html.twig" %}
{% block fos_user_content %}
<br>
<hr>
<span class="h5 card-title">Opciones de Informes Definidos</span>
<hr>
{% for message in app.flashes('sussecc') %}
	<div class="alert alert-success" role="alert">
	  {{ message }}
	</div>
{% endfor %}


	<table class="table table-striped table-bordered table-hover table-sm ">
			<thead>
				<tr>
					<th>#</th>
					<th>Informe</th>
					<th>Proceso Afectado</th>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				
				{% for f in informes %}
					<tr>
						<td>{{ loop.index }}</td>
						<td>{{ f.proceso }}</td>	
						<td></td>						
						<td class="text-center">
							<a href="{{ path('informe_add_atributo_informe', {i1 : f.id}) }}" class="btn btn-sm btn-success">Modificar</a>
						</td>
					</tr>
				{% endfor %}
				</tbody>
			</table>

{% endblock fos_user_content %}
