{% extends "FOSUserBundle::layout.html.twig" %}
{% block fos_user_content %}

<style type="text/css">
.myTable {
  font-size: 0.5rem;
}
</style>

<br>
<div class="text-left">
	<span class="h5 card-title">Estado Faena : {{ faena }}</span>
</div>
<hr>


<div class="card-deck">
		<div class="card">
		  <div class="card-header rgba-green-strong">
		    De Produccion
		  </div>
		  <div class="card-body">
		    <h5 class="card-title">Total ==> <span class="text-muted">{{ totalProduccion }}</span></h5>
		      <a  data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
			    <i class="fas fa-search"></i>
			  </a>
			  <div class="collapse" id="collapseExample">
				  <div class="mt-3">
				    	<table class="table table-striped table-bordered table-hover table-sm myTable">
				    		<thead>
				    			<tr>
				    				<th>Articulo</th>
				    				<th>Proceso</th>
				    				<th>Cantidad</th>
				    			</tr>
				    		</thead>
				    		<tbody>
						    	{% for p in produccion %}
						    		<tr>
						    			<td>{{ p.articulo }}</td>
						    			<td></td>
						    			<td class="text-right">{{ p.stock }}</td>
						    		</tr> 
						    	{% endfor %}
						    </tbody>
						</table>
				  </div>
				</div>
		  </div>
		</div>
		<div class="card">
		  <div class="card-header lime accent-2">
		    A Conciliar
		  </div>
		  <div class="card-body">
		    <h5 class="card-title">Total ==> <span class="text-muted">{{ (totalRomaneo + totalCongelando) - totalProduccion }}</span></h5>
		      <a  data-toggle="collapse" href="#aconciliar" aria-expanded="false" aria-controls="aconciliar">
			    <i class="fas fa-edit"></i>
			  </a>
			  <div class="collapse" id="aconciliar">
			  	<hr>
				  <div class="mt-3">
				  		<form>
				  			<div class="form-row">
				  				<div class="col-2">
				  					<label for="cantidad">Cantidad</label>
				  					<input type="text" name="cantidad" id="cantidad" class="form-control form-control-sm" placeholder="Cantidad" value="{{ (totalRomaneo + totalCongelando) - totalProduccion }}"/>
				  				</div>
				  				<div class="col">
				  					<label for="observaciones">Observaciones</label>
				  					<input type="text" name="observaciones" id="observaciones" class="form-control form-control-sm" placeholder="Observaciones"/>
				  				</div>
				  			</div>
				  			<div class="form-row">
				  				<a href="#" class="btn btn-primary btn-sm">Ajustar</a>
				  			</div>
				  		</form>
				  </div>
				</div>
		  </div>
		</div>
</div>


<div class="card mt-3">
  <div class="card-header aqua-gradient">
    En Camara
  </div>
  <div class="card-body">
    <h5 class="card-title">Total ==> <span class="text-muted">{{ (totalRomaneo + totalCongelando) }}</span></h5>
    <hr>
<div class="card-deck">

		<div class="card">
		  <div class="card-header rgba-blue-strong">
		    Congelando
		  </div>
		  <div class="card-body">
		    <h5 class="card-title">Total ==> <span class="text-muted">{{ totalCongelando }}</span></h5>
		      <a  data-toggle="collapse" href="#congelando" aria-expanded="false" aria-controls="congelando">
			    <i class="fas fa-search"></i>
			  </a>
			  <div class="collapse" id="congelando">
				  <div class="mt-3">
				    	<table class="table table-striped table-bordered table-hover table-sm myTable">
				    		<thead>
				    			<tr>
				    				<th>Articulo</th>
				    				<th>Cantidad</th>
				    			</tr>
				    		</thead>
				    		<tbody>
						    	{% for p in dataCongelando %}
						    		<tr>
						    			<td>{{ p.articulo }}</td>
						    			<td class="text-right">{{ p.stock }}</td>
						    		</tr> 
						    	{% endfor %}
						    </tbody>
						</table>
				  </div>
				</div>

		  </div>
		</div>


		<div class="card">
		  <div class="card-header teal accent-3">
		    Refrigerando
		  </div>
		  <div class="card-body">
			<h5 class="card-title">Total ==> <span class="text-muted">{{ totalRomaneo }}</span></h5>
		      <a  data-toggle="collapse" href="#refrigerando" aria-expanded="false" aria-controls="refrigerando">
			    <i class="fas fa-search"></i>
			  </a>
			  <div class="collapse" id="refrigerando">
				  <div class="mt-3">
				    	<table class="table table-striped table-bordered table-hover table-sm myTable">
				    		<thead>
				    			<tr>
				    				<th>Articulo</th>
				    				<th>Cantidad</th>
				    			</tr>
				    		</thead>
				    		<tbody>
						    	{% for p in romaneo %}
						    		<tr>
						    			<td>{{ p.articulo }}</td>
						    			<td class="text-right">{{ p.stock }}</td>
						    		</tr> 
						    	{% endfor %}
						    </tbody>
						</table>
				  </div>
				</div>
		  </div>
		</div>
</div>
  </div>
</div>

{% endblock fos_user_content %}
{% block javascripts %}

<script type="text/javascript">
	
</script>

{% endblock %}