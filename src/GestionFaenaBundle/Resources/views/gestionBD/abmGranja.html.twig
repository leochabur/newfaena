{% extends "FOSUserBundle::layout.html.twig" %}
{% block fos_user_content %}
<br>
<hr>
<span class="h5 card-title">Nueva Granja</span>
<hr>
{% for message in app.flashes('sussecc') %}
	<div class="alert alert-success" role="alert">
	  {{ message }}
	</div>
{% endfor %}

<div class="">
	{{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    <div class="form-row">
      <div class="col">
        {{ form_label(form.entidad.valor, 'Granja') }}
        {{ form_widget(form.entidad.valor) }}
      </div>
      <div class="col">
        {{ form_label(form.renspa, 'RENSPA') }}
        {{ form_widget(form.renspa) }}
      </div>
      <div class="col">
        {{ form_label(form.ciudad) }}
        {{ form_widget(form.ciudad) }}
      </div>
    </div>
	{{ form_end(form) }}
    <br>
    <span class="h5">Granjas Existentes</span>
    <hr>
    <table class="table table-striped table-bordered table-hover table-sm ">
        <thead>
          <tr>
            <th>#</th>
            <th>Granja</th>
            <th>RENSPA</th>
            <th>Ciudad</th>
          </tr>
        </thead>
        <tbody>
        {% for f in granjas %}
            <tr>
              <td>{{ loop.index }}</td>
              <td>{{ f }}</td>  
              <td>{{ f.renspa }}</td>            
              <td>{{ f.ciudad }}</td>
            </tr>
          {% endfor %}
        </tbody>
    </table>
</div>
{% endblock fos_user_content %}
